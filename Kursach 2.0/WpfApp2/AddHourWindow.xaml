<Window x:Class="WpfApp2.AddHourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AddHourWindow" Height="323" Width="400" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Button Content="Добавить час" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" Width="212" Click="Button_Click" RenderTransformOrigin="0.511,1.363" Height="31" BorderBrush="Black" Background="#FF4D4D4D" Foreground="White"/>
        <DatePicker Name="datePicker" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" Width="212" BorderBrush="Black" Background="#FF4D4D4D"/>
        <TextBox MouseDoubleClick="Date_Click" Name="DateBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Количество часов" VerticalAlignment="Top" Width="212" FontFamily="Arial" FontSize="16" Height="24" Margin="0,164,0,0" BorderBrush="Black"/>
        <ComboBox IsEditable="True" Name="NameBox" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Width="212" Height="29" BorderBrush="Black">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE5E5E5" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <ComboBox IsEditable="True" Name="GroupBox" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="212" Height="29" BorderBrush="Black"/>
        <Label Content="Предмет:" HorizontalAlignment="Left" Margin="28,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Группа:" HorizontalAlignment="Left" Margin="35,86,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
